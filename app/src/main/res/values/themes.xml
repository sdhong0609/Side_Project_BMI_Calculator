<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BMICalculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Text.HeadStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textSize">@dimen/text_size_28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.BodyStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ButtonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">@dimen/width_size_128dp</item>
        <item name="android:layout_height">@dimen/height_size_52dp</item>
    </style>

    <style name="EdittextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">@dimen/width_size_128dp</item>
        <item name="android:layout_height">@dimen/height_size_52dp</item>
        <item name="android:padding">@dimen/padding_size_8dp</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

</resources>